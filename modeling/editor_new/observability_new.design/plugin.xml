<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>
  <extension point="org.eclipse.sirius.componentization">
    <component class="observability_new.design.Activator"
               id="observability_new.design"
	       name="observability_new">
    </component>
  </extension>
  <extension
        point="org.eclipse.ui.commands">
     <category
           id="observability_new.design.commands.category"
           name="Generate Category">
     </category>
     <command
           categoryId="observability_new.design.commands.category"
           id="observability_new.design.commands.generateFiles"
           name="Generate Files">
        <commandParameter
              id="observability_new.design.commandParameter1"
              name="modelPath"
              optional="false">
        </commandParameter>
     </command>
  </extension>
  <extension
        point="org.eclipse.ui.handlers">
     <handler
           class="observability_new.design.handlers.GenerateFiles"
           commandId="observability_new.design.commands.generateFiles">
     </handler>
  </extension>
  <extension
        point="org.eclipse.ui.bindings">
     <key
           commandId="observability_new.design.commands.generateFiles"
           contextId="org.eclipse.ui.contexts.window"
           schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
           sequence="M1+6">
     </key>
  </extension>
  <extension
        point="org.eclipse.ui.menus">
     
     <menuContribution
           locationURI="popup:org.eclipse.ui.popup.any?after=additions">
           <command
                 commandId="observability_new.design.commands.generateFiles"
                 label="Generate"
                 mnemonic="G">
                 <visibleWhen>
                       <with variable="activeMenuSelection">
				            <iterate
				                 ifEmpty="false">
				             <adapt type="org.eclipse.core.resources.IResource">
				               <test property="org.eclipse.core.resources.name" value="*.observability_new" />
				             </adapt>
				            </iterate>
				           </with>
                 </visibleWhen>
           </command>
           
     </menuContribution>
  </extension>
</plugin>
